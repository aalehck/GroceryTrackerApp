<% content_for :header do %>
    <header id="header">
        <nav class="navbar navbar-default navbar-static-top" style="background-color: #77B395;">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Grocery Tracker App</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/" class="">Home</a></li>
                        <li><a href="/profile" class="">User Profile</a></li>
                        <li><a href="/inventory" class="">Inventory</a></li>
                        <li><a href="/recipes" class="">Recipes</a></li>
                        <li><a href="/grocery_list" class="">Grocery List</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <% if current_user %>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.user_name %> <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a><%= link_to 'Logout', '/logout' %></a></li>
                                </ul>
                            </li>
                        <% else %>
                            <li><%= link_to 'Login', '/login'%></li>
                            <li><%= link_to 'Create Account', '/signup'%></li>
                        <% end %>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    </header>
<% end %>
<% content_for :content do %>
    <%= yield %>
<% end %>
<%= render template: "layouts/application" %>
