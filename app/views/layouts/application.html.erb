<!DOCTYPE html>
<html>
<head>
  <title>GroceryTracker</title>
  <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
    <%= current_user.user_name %> | <%= link_to 'Logout', '/logout' %>
<% else %>
    <%= link_to 'Login', '/login'%> | <%= link_to 'Create Account', '/signup'%>
<% end %>
<%= yield %>

</body>
</html>
