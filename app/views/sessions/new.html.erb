<% content_for :head do %>
  <title>Login</title>
<% end %>

<div class="loginform cf">
  <h1> User Login </h1>
  <%= form_for(:session, url: '/login') do |f| %>
    <ul>
        <li>
            <label>Username</label>
            <%= f.text_field :user_name %>
        </li>
        <li>
            <label>Password</label>
            <%= f.password_field :password %>
        </li><br><br>
        <li><%= f.submit "Login" %></li>
        Don't have an account? <%= link_to 'Create Account', '/signup'%>
    </ul>
  <% end %>
</div>
