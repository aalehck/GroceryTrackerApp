<title>Grocery List</title>
<pre id="spoonacular-ingredients" style="display:none">
    <% @user.grocery_list.items.each do |item| %>
	<%= item.amount%> <%= item.unit%> <%= item.name %>
    <% end %>
</pre>
<div id="wrapper">
    <main>
        <div id="content">
        	<div class="container">
				<div class="row">
					<div class="col-sm-2">
						<h2>Grocery List</h2>
					</div>
					<div class="col-sm-2">
						<br><button data-toggle="modal" data-target="#squarespaceModal" class="btn btn-primary">Add an Item!</button>
					</div>
					<div class="col-sm-2">
						<br><%= button_to "Import to Inventory", add_items_inventory_path, :form => {:id => "add-all"}, :class => 'btn btn-small' %>
					</div>
				</div>
			</div>

			<div id="inventory">
				<%= render "items/update_form" %>
			</div>

      <div id="spoonacular-ingredient-visualizer"></div>
      <script type="text/javascript">
       var spoonacularServings = 2;
       var spoonacularMeasure = 'us';
       var spoonacularView = 'grid';
      </script>

			<!--START ADD-->
			<div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
				<%= render "items/form" %>
			</div>
			<!--END-->

			<!--PRICE INFO-->
			<br>
			<div class="container">
				<div class="form-inline">
					<div class="col-sm-3">
						<h2>Price Breakdown</h2>
					</div>
					<div class="col-sm-3">
						<br><label>Budget Total</label>: <%= @budget.budget_total%><br/>
						<label>Budget Used</label>:  <%= @budget.budget_used%><br/>
					</div>
				</div>
			</div>

			<div id="spoonacular-price-estimator"></div>

		</div>
	</main>
</div>
<script type="text/javascript" src="https://spoonacular.com/cdn/spoonacular-1.5.min.js"></script>
<script type="text/javascript">
	<%= render "spoon_observer.js"%>
</script>
