<title>Recipe Information</title>
<div id="wrapper">
	<main>
		<div id="content">

            <h2><%= @body['title'] %></h2>
            
            <table style="width: 100%">
                <tbody>
                    <tr>
                        <td>
                            <h4>Ready in <%= @body['readyInMinutes']%> minutes, Serves <%= @body['servings']%></h4>
                            <br><br>
                            <img src="<%= @body['image'] %>" style="width:304px;height:228px;">
                            <br><br>
                            <%= form_tag recipes_path, :method => :post do %>
                                <%= hidden_field_tag :information, @body %>
                                <%= submit_tag "Save to Recipes", type: 'submit', class: "btn btn-default"%>
                            <% end %>
                        </td>
                        <td>
                            <h3>Ingredients</h3>
                            <% @body['extendedIngredients'].each do |ingredient| %>
                                <% if !ingredient['originalString'].empty? %>
                                    <%= ingredient['originalString'] %></br></br>
                                <% else %>
                                    <%= ingredient['name'] %></br>
                                    Amount: <%= ingredient['amount']%> <%= ingredient['unit']%></br>
                                <% end %>
                            <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
        <!-- END --> 
	    <p><%= @message %></p>
	    <pre id="spoonacular-ingredients" style="display:none">
		<% @getCost.each do |ingredient| %>
		    <%= ingredient %>
		<% end %>	
	    </pre>
	    <div id="spoonacular-price-estimator"></div>
	    <script type="text/javascript">
	     var spoonacularServings = 4;
	     var spoonacularPriceView = 1;
	    </script>
	    <script type="text/javascript" src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
	    <script type="text/javascript" src="https://spoonacular.com/cdn/spoonacular-1.5.min.js"></script>
        </div>
    </main>
</div>

