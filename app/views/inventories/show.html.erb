<h2>Inventory</h2>
<div id="wrapper">
    <main>
        <div id="content">
            <h2>Grocery List</h2>
	    <div id="inventory">
		<table>
		    <tbody>
			<% @user.inventory.items.each do |item| %>
			    <tr>
				<%= render item %>
			    </tr>
			<% end %>
		    </tbody>
		</table>
	    </div>

            <%= render "items/form" %>
        </div>
    </main>
</div>
